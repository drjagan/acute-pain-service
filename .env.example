# Acute Pain Service - Environment Configuration Template
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_NAME=aps_database
DB_USER=aps_user
DB_PASS=YourSecurePasswordHere
DB_CHARSET=utf8mb4

# Application Configuration
APP_ENV=production
APP_DEBUG=false
APP_NAME=Acute Pain Service
APP_URL=https://your-domain.com

# Session Configuration
SESSION_LIFETIME=7200
SESSION_NAME=APS_SESSION

# Security
# Generate a secure key: php -r "echo bin2hex(random_bytes(32));"
APP_KEY=

# Timezone
APP_TIMEZONE=UTC

# Email Configuration (Optional - for notifications)
SMTP_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_ENCRYPTION=tls
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@your-domain.com
SMTP_FROM_NAME=Acute Pain Service

# File Upload Configuration
MAX_UPLOAD_SIZE=10M
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Backup Configuration
BACKUP_PATH=/var/backups/aps
BACKUP_RETENTION_DAYS=30

# Logging
LOG_LEVEL=error
LOG_PATH=/var/log/aps
